{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist",
        "buildCommand": "yarn build",
        "rootDirectory": "client"
      }
    }
  ],
   "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "server/index.js"
    }
  ],
  "rewrites": [
    {
      "src": "/api/(.*)",
      "dest": "/server/server.js"
    },
    {
      "src": "/((?!api/).*)",
      "dest": "/client/index.html"
    }
  ]
}